<h1>User List</h1>

<table>
	<tr>
		<th>Username</th>
		<th>Email</th>
		<th>Number of goals</th>
	</tr>
	
	<% @users.each do |user| %>
		<tr>
			<td><%= link_to user.username, user_path(user) %></td>
			<td><%= user.email %></td>
			<td><%= user.goals.count %></td>
		</tr>
	<% end %>
</table>

<%= link_to 'New User', new_user_path %>