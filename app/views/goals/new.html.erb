<h1>New Goal</h1>

<%= form_for :goal, url: user_goals_path do |f| %>
	<% if @goal.errors.any? %>
	<div id="error_explanation">
		<ul>
		<% @goal.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
	<% end %>

	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>
	
	<p>
		<%= f.label :goal_wordcount %><br>
		<%= f.text_field :goal_wordcount %>
	</p>
	
	<p>
		<%= f.label :start_date %><br>
		<%= f.date_select :start_date %>
	</p>
	
	<p>
		<%= f.label :end_date %><br>
		<%= f.date_select :end_date %>
	</p>
	
	<p>
		<%= f.submit %>
	</p>
	
	<%= f.hidden_field :current_wordcount, :value => 0 %>
<% end %>

<%= link_to 'Back to user profile', user_path(@user) %>